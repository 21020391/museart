{
  "expo": {
    "name": "Museart",
    "slug": "museart",    
    "scheme": "museart",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/museum.png",
    "userInterfaceStyle": "automatic",
    "plugins": [
      [
        "expo-font",
        {
          "fonts": ["./assets/fonts/Roboto-Medium.ttf", 
          "./assets/fonts/PlayfairDisplay-Medium.ttf", 
          "./assets/fonts/PlayfairDisplay-Regular.ttf", 
          "./assets/fonts/PlayfairDisplay-Bold.ttf"]
        }
      ]
    ],
    "splash": {
      "image": "./assets/frame-101.png",
      "resizeMode": "contain",
      "backgroundColor": "#D00000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "jsEngine": "jsc"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/frame-101.png",
        "backgroundColor": "#D00000"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "jsEngine": "hermes"
  }
}
